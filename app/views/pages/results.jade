extends ../layout

block content
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if movies && movies.length > 0
            each item in movies
              .col-md-2
                .thumbnail
                  a(href="/movies/#{item._id}")
                    img(src="#{item.poster}",alt="#{item.title")
                  .caption
                    h3 #{item.title}
                    p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片
      ul.pagination
        - for (var i = 1; i < totalPage+1; i++) {
          - if (currentPage == i ) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href='/results?#{query}&p=#{i}') #{i}
          - }
        - }
      br
      br
      br              